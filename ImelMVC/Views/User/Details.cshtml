@model User

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-header bg-primary text-white">
            <h4>Detalji korisnika</h4>
        </div>
        <div class="card-body">
            <form asp-action ="Update" asp-controller="User" method="post">
                <input name="Id" type="hidden" value="@Model.Id" />
                <input name="UserSpecificId" type="hidden" value="@Model.UserSpecificId" />
                <div class="mb-3">
                    <label class="form-label">Ime</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Prezime</label>
                    <input type="text" class="form-control" name="Surname" value="@Model.Surname" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="Email" value="@Model.Email" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Current Role</label>
                    <span>@Model.Role</span>
                    <div>
                        <select name="Role">
                            <option value="@Model.Role"  selected>Izaberi ulogu</option>
                            <option value="@(Model.Role == "User" ? "Admin" : "User")">@(Model.Role == "User" ? "Admin" : "User")</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Current Status</label>
                    <span>@Model.Status</span>
                    <div>
                        <select name="Status">
                            <option value="@Model.Status"  selected>Izaberi status</option>
                            <option value="@(Model.Status == "Active" ? "Inactive" : "Active")">@(Model.Status == "Active" ? "Inactive" : "Active")</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Spremi</button>
                </div>
            </form>
        </div>
    </div>
</div>
